{
  "name": "@se-oss/jalaali",
  "version": "1.1.0",
  "description": "Modern, lightweight, and tree-shakable Jalaali (Persian) calendar library with chainable API and native Intl support",
  "keywords": [
    "jalaali",
    "persian",
    "calendar",
    "shamsi",
    "date",
    "intl",
    "typescript",
    "lightweight"
  ],
  "homepage": "https://github.com/shahradelahi/ts-jalaali",
  "repository": "github:shahradelahi/ts-jalaali",
  "license": "MIT",
  "author": "Shahrad Elahi <shahrad@litehex.com> (https://github.com/shahradelahi)",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.cjs"
    }
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "browser": "dist/index.cjs",
  "types": "dist/index.d.ts",
  "bin": {
    "jalaali": "./dist/cli.js"
  },
  "files": [
    "dist/**",
    "!**/*.d.cts"
  ],
  "scripts": {
    "bench": "vitest bench --run",
    "build": "pnpm typecheck && tsup",
    "ci:publish": "changeset publish",
    "clean": "git clean -dfx \"**/node_modules/**\" dist .tsbuildinfo",
    "dev": "tsup --watch",
    "fetch-events": "node scripts/fetch-events.ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "pnpm typecheck && eslint .",
    "lint:fix": "eslint --fix .",
    "prepublishOnly": "pnpm build && pnpm lint && pnpm format:check && pnpm test",
    "test": "vitest --run",
    "typecheck": "tsc --noEmit"
  },
  "prettier": "@shahrad/prettier-config",
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@shahrad/eslint-config": "^1.0.1",
    "@shahrad/prettier-config": "^1.2.2",
    "@shahrad/tsconfig": "^1.2.0",
    "@types/node": "^25.3.0",
    "eslint": "^10.0.1",
    "globals": "^17.3.0",
    "openai": "^6.22.0",
    "prettier": "^3.8.1",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "packageManager": "pnpm@10.30.2+sha512.36cdc707e7b7940a988c9c1ecf88d084f8514b5c3f085f53a2e244c2921d3b2545bc20dd4ebe1fc245feec463bb298aecea7a63ed1f7680b877dc6379d8d0cb4",
  "publishConfig": {
    "access": "public",
    "provenance": true
  }
}
